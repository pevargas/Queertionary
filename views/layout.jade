doctype html
html
  head
    title Queerionary | #{ title }
    meta(charset="utf-8")
    meta(application-name="Queertionary")
    meta(author="Patrick E. Vargas")
    meta(description="Queertionary is a queer dictionary. Queertionary pulls in definitions for queer jargon alongside uses of that word. User can explore what queer words are defined to various people and how they are used in practice.")

    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type="text/javascript", src="/js/queertionary.js")
    script(type="text/javascript", src="/js/masonry.pkgd.min.js")
    script(type="text/javascript").
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-28491088-3', 'queertionary.com');
      ga('send', 'pageview');

  body(onload="javascript:onload()")
    block bin
    div.content
      section.center
        nav
          menu
            li: a.blue-back(href="/" title="Go Home, Dorothy") 
              span Queertionary
            li: a.red-back(href="/define" title="Cruisin' in the park after dark") 
              span Browse
            li: a.yellow-back(href="/find" title="Lookup")
              span Search
        header
          block head
        article
          if msg
            p msg
          block content
        footer.center
          ul.foot
            //- li: a.red-back(href="/disclaimer")
                span Disclaimer
            li: a.black-back(href="http://www.github.com/pevargas/Queertionary", target="_blank")
              span Repo
            li: a.black-back(href="http://www.vargascorpus.com", target="_blank")
